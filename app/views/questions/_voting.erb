
<form action=<%= "/votable/#{votable.class}/#{votable.id}/votes/1" %> method="post">
  <input type="hidden" name="question_id" value=<%= current_question.id %>>
  <!-- <div class="arrow-up"></div> -->
  <% if current_user && user_upvote(votable) %>
  <% color = "background-color: orange" %>
  <% end %>
  <button type="submit" class="arrow-up-btn" style=<%= color %>></button>
  </form>

  <div class="vote-total"><%= votable.vote_total %></div>
  <form action=<%= "/votable/#{votable.class}/#{votable.id}/votes/-1" %> method="post">
  <input type="hidden" name="question_id" value=<%= current_question.id %>>
  <% if current_user && user_upvote(votable) %>
  <% color = "background-color: red" %>
  <% end %>
  <button type="submit" style=<% color %> class="arrow-down-btn"></button>
  <!-- <div class="arrow-down"></div> -->
</form>
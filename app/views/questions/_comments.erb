<% commentable.comments.each do |comment| %>
  <li>
    <div class="comment">
      <span class="votes">
        <form action=<%= "/voteable/#{comment.class}/#{comment.id}/votes/1" %> method="post">
          <input type="hidden" name="question_id" value=<%= current_question.id %>>
          <!-- <div class="arrow-up"></div> -->
          <button type="submit" class="arrow-up-btn"></button>
          </form>

         <div class="vote-total"><%= comment.vote_total %></div>
         <form action=<%= "/voteable/#{comment.class}/#{comment.id}/votes/-1" %> method="post">
         <input type="hidden" name="question_id" value=<%= current_question.id %>>
         <button type="submit" class="arrow-down-btn"></button>
        <!-- <div class="arrow-down"></div> -->
        </form>
      </span>
      <div class="description"><%= comment.description %></div>
      <span class="author">By <a href=<%= "/users/#{comment.author.id}" %>><%= comment.author.username %></a> on <%= comment.created_at %></span>
    </div>
  </li>
<% end %>

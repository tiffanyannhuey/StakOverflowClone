<div class='content'>

  <h1 class="hero"><%= current_question.title %></h1>
  <div class="question">
    <%= current_question.description %>
    <span class="author">Author: <a href=<%= "/users/#{current_question.author.id}" %>><%= current_question.author.username %></a></span>
  </div>
  <div class="answer">
    <% if best_answer %>
    <div class="best-answer">
      <h3>Best Answer</h3>
      <span class="votes">
        <div class="arrow-up"></div>
         <%= best_answer.vote_total %>
        <div class="arrow-down"></div>
      </span>
      <span class="description"><%= best_answer.description %></span>
      <div class="author">Author: <a href=<%= "/users/#{best_answer.author.id}" %>><%= best_answer.author.username %></a></div>
      </div>
      <h4 class="comments-header">Comments: <%= best_answer.comments.count %></h4>
      <% best_answer.comments.each do |comment| %>
        <ul class="comments">
          <li>
            <div class="comment">
              <span class="votes">
                <div class="arrow-up"></div>
                 <%= comment.vote_total %>
                <div class="arrow-down"></div>
              </span>
              <span class="author">Author: <a href=<%= "/users/#{comment.author.id}" %>><%= comment.author.username %></a></span>
              <div class="description"><%= comment.description %></div>
            </div>
          </li>
        </ul>
    <%= erb :'comments/new', :locals => { :answer => best_answer } %>
    
  <% end %>
      
    <% end %>
  </div>


  <div class="answers">
    <h2>Answers</h2>
    <ul>
    <% current_question.answers.each do |answer| %>
      <% next if answer == best_answer %>
      <li class="answer">
        <h4 class="answer-header">Answer:</h4>
        <span class="votes">
          <div class="arrow-up"></div>
           <%= answer.vote_total %>
          <div class="arrow-down"></div>
        </span>

        <span class="author">Author: <a href=<%= "/users/#{answer.author.id}" %>><%= answer.author.username %></a></span>
        <div class="description"><%= answer.description %></div>

          <h4 class="comments-header">Comments: <%= answer.comments.count %></h4>
          <%= erb :'comments/new', :locals => { :answer => answer } %>

          <% answer.comments.each do |comment| %>
          <ul class="comments">
            <li>
              <div class="comment">
                <span class="votes">
                  <div class="arrow-up"></div>
                   <%= comment.vote_total %>
                  <div class="arrow-down"></div>
                </span>
                <span class="author">Author: <a href=<%= "/users/#{comment.author.id}" %>><%= comment.author.username %></a></span>
                <div class="description"><%= comment.description %></div>
              </div>
            </li>
          </ul>
          <% end %>
      </li>
    <% end %>
    </ul>
  </div>

  <%= erb(:"/answers/new") %>
</div>





